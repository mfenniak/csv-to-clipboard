# Maintainer: Mathieu Fenniak <mathieu@fenniak.net>
pkgname=csv-to-clipboard
pkgver=1.0.1
pkgrel=1
pkgdesc="Copy CSV files into the clipboard in a pasteable format"
arch=('x86_64')
url="https://github.com/mfenniak/csv-to-clipboard"
license=('MIT')
#depends=('gcc-libs' 'pcre2')
makedepends=('cargo') # 'asciidoctor' 'jq')
source=("$pkgname-$pkgver.tar.gz::https://github.com/mfenniak/$pkgname/archive/$pkgver.tar.gz")
sha512sums=('8fb8ad76a962238edcc5a05ad67b4b99652d65ca0dd0ff471ef5680bcbe6f086d44c025fb75584f0442c10ccc2d05a07a5589beb4da922f5016f0af6dbb1dd65')

build() {
  cd "$pkgname-$pkgver"

  cargo build --release --locked 
}

check() {
  cd "$pkgname-$pkgver"

  cargo test --release --locked
}

package() {
  cd "$pkgname-$pkgver"

  install -Dm755 "target/release/csv-to-clipboard" "$pkgdir/usr/bin/csv-to-clipboard"

  install -Dm644 "README.md" "$pkgdir/usr/share/doc/${pkgname}/README.md"
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
  install -Dm644 "${pkgname}.desktop" "$pkgdir/usr/share/applications/${pkgname}.desktop"
}
